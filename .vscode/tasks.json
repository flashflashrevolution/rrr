{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true,
                "close": true
            },
        },
        {
            "label": "build-wasm-release",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--release",
                "--target=wasm32-unknown-unknown",
                "--package",
                "rrr-head",
                "--target-dir",
                "target",
                "--features",
                "release",
            ],
        },
        {
            "label": "build-release-workers",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--release",
                "--target=wasm32-unknown-unknown",
                "--package",
                "rrr-core",
                "--target-dir",
                "target",
                "--features",
                "release",
            ],
        },
        {
            "label": "bundle-release-worker",
            "type": "shell",
            "command": "wasm-bindgen",
            "args": [
                 "--out-name",
                 "worker",
                 "--out-dir",
                 "dist",
                 "--target",
                 "no-modules",
                 "target/wasm32-unknown-unknown/release/worker.wasm"
            ],
            "dependsOn": ["build-release-workers"],
            "problemMatcher": []
        },
        {
            "label": "bundle-wasm-release",
            "type": "shell",
            "command": "wasm-bindgen",
            "args": [
                 "--out-name",
                 "rrr",
                 "--out-dir",
                 "dist",
                 "--target",
                 "web",
                 "target/wasm32-unknown-unknown/release/rrr-head.wasm"
            ],
            "dependsOn": ["build-wasm-release", "bundle-release-worker"],
            "problemMatcher": []
        },
        {
            "label": "Miniserve",
            "type": "shell",
            "isBackground": true,
            "command": "miniserve",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "args": [
                "web",
                "--index",
                "index.html"
            ],
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "WASM Watch",
            "type": "shell",
            "isBackground": true,
            "command": "cargo",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "args": [
                "watch",
                "-i",
                ".git*",
                "-i",
                "target/*",
                "-i",
                ".vscode/*",
                "-i",
                "./web/*",
                "-s",
                "cargo build --release --package rrr-head --target wasm32-unknown-unknown --target-dir target --features develop && wasm-bindgen --out-name rrr --out-dir web/bin --target web target/wasm32-unknown-unknown/release/rrr-head.wasm"
            ],
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "WASM Worker Watch",
            "type": "shell",
            "isBackground": true,
            "command": "cargo",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "args": [
                "watch",
                "-i",
                ".git*",
                "-i",
                "target/*",
                "-i",
                ".vscode/*",
                "-i",
                "./web/*",
                "-s",
                "cargo build --release --package rrr-head --features release --target wasm32-unknown-unknown --target-dir target --features release && wasm-bindgen --no-typescript --out-name worker --out-dir web/bin --target no-modules target/wasm32-unknown-unknown/release/worker.wasm"
            ],
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        }
    ]
}
